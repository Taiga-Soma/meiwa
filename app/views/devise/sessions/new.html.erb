<%= render "shared/second_header" %> 

<%= form_with model: @user, url: user_session_path, class: 'login-main', local: true do |f| %>
<div class='login-form'>
  <div class='login-form-header'>
    <h1 class='login-form-header-text'>
      会員情報入力
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice]  %>  <%# flashの記述は消さずにそのままで良い %>
    <%= flash[:alert] %>    <%# css、classの位置を適正な場所にすること %>
  </div>
  <div class="login-form-group">
    <div class='login-form-text-wrap'>
      <label class="login-form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="login-form-group">
    <div class='login-form-text-wrap'>
      <label class="login-form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>
  <div class = 'password'>
    <%= render "devise/shared/links" %>
  </div>
</div>
<% end %>


<%= render "shared/footer"%>